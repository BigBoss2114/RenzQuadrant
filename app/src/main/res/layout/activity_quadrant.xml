<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.manigbas.quadrant">

    <ImageView
        android:layout_width="299dp"
        android:layout_height="245dp"
        android:id="@+id/imageView"
        android:src="@drawable/quadrant"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X1:"
        android:id="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/x1Edit"
        android:layout_alignParentStart="true"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="X2:"
        android:id="@+id/textView3"
        android:layout_above="@+id/x2Edit"
        android:layout_toEndOf="@+id/x1Edit" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/x2Edit"
        android:enabled="false"
        android:focusableInTouchMode="false"
        android:layout_alignTop="@+id/x1Edit"
        android:layout_toEndOf="@+id/x1Edit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y1:"
        android:id="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/x2Edit"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/y1Edit"
        android:layout_alignParentStart="true"
        android:enabled="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y2:"
        android:id="@+id/textView5"
        android:layout_above="@+id/y1Edit"
        android:layout_toEndOf="@+id/y1Edit" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/y2Edit"
        android:enabled="false"
        android:focusableInTouchMode="false"
        android:layout_alignTop="@+id/y1Edit"
        android:layout_toEndOf="@+id/y1Edit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Difference:"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/differenceEditText"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/differenceEditText"
        android:enabled="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/y1Edit"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quadrant:"
        android:id="@+id/textView7"
        android:layout_below="@+id/differenceEditText"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/quadrantEditText"
        android:enabled="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true" />
</RelativeLayout>
